---
export interface Props {
  data: any;
}
import "@splidejs/splide/css";

import { Image } from "astro:assets";
import TestimonialImage from "../testimonials-icon.png";
import ContentLoop from "./ContentLoop";
const { data } = Astro.props;
---

<li
  class="splide__slide box-border shrink-0 list-none m-0 z-0 overflow-hidden p-2"
>
  <div
    class="flex flex-col relative border-y-[3px] border-lightgray lg:container mx-auto justify-start items-center gap-4 lg:py-6 md:py-10 sm:py-10 lg:w-[60%] sm:h-auto sm:max-w-ffull sm:w-full bg-white p-4"
  >
    <div class="flex justify-between max-w-full">
      <div class="flex flex-col space-y-6">
        <div class="flex justify-center pt-3 pb-6">
          <Image src={TestimonialImage} width="70" alt="ddaa" />
        </div>
        <ContentLoop data={data} client:load />
      </div>
    </div>
  </div>
</li>
