---
export interface Props {
  data: any;
}
import { Image } from "astro:assets";
import TestimonialInage from "../testimonials-icon.png";

const { data } = Astro.props;
---

<li
  class="splide__slide box-border shrink-0 list-none m-0 relative z-0 overflow-hidden p-2"
>
  <div
    class="flex flex-col border-t-2 border-b-2 border-lightgray lg:container mx-auto justify-start items-center gap-4 lg:h-[45vh] md:h-[45vh] lg:w-[60%] sm:h-[50vh] sm:max-w-[80%] sm:w-full bg-white shadow-sm p-4"
  >
    <div class="flex justify-between max-w-[80%]">
      <div class="flex flex-col px-2 space-y-6">
        <div class="flex justify-center">
          <Image src={TestimonialInage} alt="ddaa" />
        </div>
        <i class="leading-5 text-xl">
          {data.Review}
        </i>
        <h3 class="text-2xl font-[Poppins]">
          {data.Client}
        </h3>
        <span class="leading-5 text-xl">{`${data.ClientOrganization}`}</span>
      </div>
    </div>
  </div>
</li>
