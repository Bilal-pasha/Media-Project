---
export interface Props {
  data: any;
}
const { data } = Astro.props;
---

<li
  class="splide__slide box-border shrink-0 list-none m-0 relative z-0 overflow-hidden p-2"
>
  <div class="flex flex-col gap-4 h-full rounded-lg bg-white shadow-sm p-4">
    <div class="flex items-center justify-start">
      <div class="flex flex-col px-2">
        <h3 class="text-xl font-[Poppins]">
          {data.Client}
        </h3>
        <span>{`${data.ClientOrganization}`}</span>
      </div>
    </div>

    <p class="leading-5">
      {data.Review}
    </p>
  </div>
</li>
