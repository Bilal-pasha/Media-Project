---
import { MainLogo } from "@utils/images";
import { Image } from "@utils/Components";
import Jsontext from "../layouts/Heading/heading.json";
---

<section class="text-black border-t-[0.1px] border-lightgray">
  <div
    class="md:px-0 lg:grid md:grid lg:grid-cols-4 md:grid-rows-1 sm:flex sm:flex-col text-slate-200 lg:py-8 md:py-10 sm:py-0"
  >
    <div
      class="lg:col-span-1 md:col-span-1 lg:-order-first sm:order-last md:justify-items-center sm:row-span-1 lg:pl-6 lg:pr-0 md:pl-8 sm:px-12 md:px-[50px] space-y-3 text-semigray font-[Poppins] md:w-max text-xs lg:py-0 sm:py-10"
    >
      <a href="/"
        ><Image
          src={MainLogo}
          alt="MaxLogo"
          height="20"
          width="120"
          class="max-w-[150px]"
        /></a
      >

      <p class="space-x-4">
        <a href="/terms-of-services" class="hover:text-blue"
          >{Jsontext.FOOTERTEXT.TERMSSERVICES}</a
        >
        <a href="/private-policies" class="hover:text-blue"
          >{Jsontext.FOOTERTEXT.privatepolicy}</a
        >
      </p>
      <div class="flex items-center space-x-1">
        <span>&copy</span>
        <p>{Jsontext.FOOTERTEXT.copyrighttext}</p>
      </div>
    </div>
    <div
      class="flex lg:flex-row md:flex-row sm:flex-col lg:-order-first sm:order-first lg:justify-end lg:text-xs md:text-xs lg:items-start md:items-start md:text-left font-[Poppins] lg:pl-0 lg:pr-[1.5%] md:px-8 lg:space-x-10 md:space-x-10 lg:col-span-3 sm:w-full sm:px-[50px] lg:py-0 md:py-10 sm:py-0"
    >
      <ul
        class="space-y-5 space-x-1 lg:py-0 md:py-0 lg:mt-0 lg:pl-10 md:mt-0 sm:mt-10"
      >
        <li class="hover:text-blue">
          <a href="/About">{Jsontext.header.abouttext}</a>
        </li>
      </ul>
      <ul
        class="flex flex-col space-y-3 space-x-1 cursor-pointer hover:text-blue-500 lg:my-0 md:mt-0 sm:my-5"
      >
        <li class="hover:text-blue">
          <a href="/Strategic_consulting"
            >{Jsontext.header.Strategictext.STRATEGICCONSULTING}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Strategic_consulting/#Earned"
            >{Jsontext.header.Strategictext.earnedmediatext}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Strategic_consulting/#crisis"
            >{Jsontext.header.Strategictext.crisiscommunication}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Strategic_consulting/#new-industry"
            >{Jsontext.header.Strategictext.NEWSINDUSTRY}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Strategic_consulting/#multi-media"
            >{Jsontext.header.Strategictext.MULTIMEDIA}</a
          >
        </li>
      </ul>
      <ul
        class="flex flex-col space-y-3 space-x-1 cursor-pointer hover:text-blue-500 lg:my-0 md:mt-0 sm:my-5"
      >
        <li class="hover:text-blue">
          <a href="/Media_training"
            >{Jsontext.header.MEDIATRAININGTEXT.MEDIATRAINING}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Media_training/#for-leaders"
            >{Jsontext.header.MEDIATRAININGTEXT.FORLEADERTEXT}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Media_training/#for-journalists"
            >{Jsontext.header.MEDIATRAININGTEXT.FORJOURNALIST}</a
          >
        </li>
      </ul>
      <ul
        class="space-y-3 space-x-1 cursor-pointer hover:text-blue-500 lg:my-0 md:mt-0 sm:my-5"
      >
        <li class="hover:text-blue">
          <a href="/Video_production"
            >{Jsontext.header.VIDEOPRODUCTIONTEXT.VIDEOPRODUCTIONTEXT}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Video_production#CORPORATE"
            >{Jsontext.header.VIDEOPRODUCTIONTEXT.CORPORATETEXT}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Video_production/#Legal"
            >{Jsontext.header.VIDEOPRODUCTIONTEXT.LEGALTEXT}</a
          >
        </li>
      </ul>

      <ul
        class="flex flex-col space-y-3 space-x-1 cursor-pointer hover:text-blue-500 lg:my-0 md:mt-0 sm:my-5"
      >
        <li class="hover:text-blue">
          <a href="/Contact">{Jsontext.header.CONTACTUS.CONTACTTEXT}</a>
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Contact/#contact-items"
            >{Jsontext.header.CONTACTUS.CONSULTATIONTEXT}</a
          >
        </li>
        <li class="text-semigray hover:text-blue">
          <a href="/Contact/#contact-items"
            >{Jsontext.header.CONTACTUS.SENDMESSAGE}</a
          >
        </li>
      </ul>
    </div>
  </div>
</section>
