---
// import { RxHamburgerMenu } from "react-icons/rx";
import { Image } from "astro:assets";
// import logo from "../../assets/Logo.png";
import logo2 from "../../assets/Logo2.png";
import Icon from "../../components/CustomNavbar/Hamburger.jsx";
import Accordian from "./Accordian/Accordian.astro";
---

<Fragment>
  <nav
    class="flex h-[70px] items-center lg:justify-between md:justify-between sm:justify-between lg:px-2 md:px-5 sm:px-4 dark-mode:text-gray-200 py-4 dark-mode:bg-gray-800 bg-white text-gray-700 sticky top-0 z-50 shadow-lg bg-opacity-95"
  >
    <input type="checkbox" id="check" class="hidden peer" checked />
    <label
      for="check"
      class="lg:hidden md:block sm:block text-4xl cursor-pointer"
    >
      <Icon client:only />
    </label>
    <div class="flex flex-row justify-center px-4 space-x-2">
      <a href="/">
        <Image
          src={logo2}
          alt="logo"
          height="20"
          width="120"
          class="max-w-[100px]"
        />
      </a>
      <h2
        class="text-xl font-[Poppins] font-semibold lg:block md:hidden sm:hidden"
      >
        MEDIA ADVISORY <span class="text-blue"> EXPERTS</span>
      </h2>
    </div>
    <ul
      class="lg:flex lg:items-center md:hidden sm:hidden lg:static sm:fixed sm:peer-checked:left-[-100%] sm:left-0 sm:transition-all md:duration-[900ms] sm:duration-[900ms] md:top-[70px] sm:top-[70px]
            lg:w-auto lg:h-auto md:w-full sm:w-full md:h-[100vh] sm:h-[100vh] text-black md:bg-[#fffffff2] sm:bg-[#fffffff2] lg:bg-transparent lg:space-y-0 md:space-y-5 sm:space-y-5 lg:py-0 md:py-10 sm:py-10 md:z-20 sm:z-20
            font-[Poppins]"
    >
      <li
        class="lg:border-none md:border-b-[1px] lg:py-0 md:py-4 sm:py-4 md:border-[#cdc6c6] sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <a
          class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue md:mt-0 hover:text-gray-900 focus:text-gray-900 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
          href="/About">ABOUT</a
        >
      </li>
      <li
        class="lg:border-none md:border-b-[1px] lg:py-0 md:py-4 sm:py-4 md:border-[#cdc6c6] sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button
            class="peer lg:px-4 md:px-0 lg:py-2 lg:text-black md:text-black"
          >
            <a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="/Video_production">VIDEO PRODUCTION</a
            ></button
          >
          <div
            class="absolute hidden peer-hover:flex hover:flex
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a
              class="px-5 py-3 hover:text-blue"
              href="/Video_production#CORPORATE">CORPORATE VIDEOS</a
            >
            <a class="px-5 py-3 hover:text-blue" href="/Video_production#Legal"
              >LEGAL VIDEOS</a
            >
          </div>
        </div>
      </li>
      <li
        class="lg:border-none md:border-b-[1px] md:border-[#cdc6c6] lg:py-0 md:py-4 sm:py-4 sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button
            class="peer lg:px-4 md:px-0 lg:py-2 lg:text-black md:text-black"
          >
            <a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="/Media_training">MEDIA TRAINING/COACHING</a
            >
          </button>
          <div
            class="absolute hidden peer-hover:flex hover:flex lg:mx-7
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a
              class="px-5 py-3 hover:text-blue"
              href="/Media_training/#for-leaders">FOR LEADERS</a
            >
            <a
              class="px-5 py-3 hover:text-blue"
              href="/Media_training/#for-journalists">FOR JOURNALISTS</a
            >
          </div>
        </div>
      </li>
      <li
        class="lg:border-none md:border-b-[1px] md:border-[#cdc6c6] lg:py-0 md:py-4 sm:py-4 sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button
            class="peer lg:px-4 md:px-0 lg:py-2 lg:text-black md:text-black"
          >
            <a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="/Strategic_consulting">STRATEGIC CONSULTING</a
            ></button
          >
          <div
            class="absolute hidden peer-hover:flex hover:flex lg:mx-4
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a
              class="px-5 py-3 hover:text-blue"
              href="/Strategic_consulting/#Earned-Media">EARNED MEDIA</a
            >
            <a
              class="px-5 py-3 hover:text-blue"
              href="/Strategic_consulting/#Crisis-Communication"
              >CRISIS COMMUNICATIONS</a
            >
            <a
              class="px-5 py-3 hover:text-blue"
              href="/Strategic_consulting/#new-industry"
              >NEWS INDUSTRY INSIGHT</a
            >
            <a
              class="px-5 py-3 hover:text-blue"
              href="/Strategic_consulting/#multi-media">MULTI-MEDIA</a
            >
          </div>
        </div>
      </li>
      <li
        class="lg:border-none md:border-b-[1px] md:border-[#cdc6c6] lg:py-0 md:py-4 sm:py-4 sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button class="peer md:px-0 lg:py-2 lg:text-black md:text-black"
            ><a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-sm font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="/Contact">CONTACT</a
            ></button
          >
          <div
            class="absolute hidden peer-hover:flex hover:flex mx-[-85px]
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a class="px-5 py-3 hover:text-blue" href="/Contact/#contact-items"
              >BOOK FREE CONSULTATION</a
            >
            <a class="px-5 py-3 hover:text-blue" href="/Contact/#contact-items"
              >SEND US A MESSAGE</a
            >
          </div>
        </div>
      </li>
    </ul>
    <div
      class="md:block md:peer-checked:left-[-100%] md:fixed md:left-0 md:transition-all md:duration-[900ms] md:top-[70px] md:h-[100vh] md:bg-[#fffffff2] w-full md:py-10 md:space-y-10 sm:block sm:peer-checked:left-[-100%] sm:fixed sm:left-0 sm:transition-all sm:duration-[900ms] sm:top-[70px] sm:h-[100vh] sm:bg-[#fffffff2] sm:py-10 sm:space-y-10"
    >
      <Accordian />
    </div>
  </nav>
</Fragment>
