import { Image } from "astro:assets";
// import logo from "../../assets/Logo.png";
import logo2 from "../../assets/Logo2.png";
import Icon from "../../components/CustomNavbar/Hamburger.jsx";
---

<Fragment>
  <nav
    class="flex h-[70px] items-center lg:justify-between md:justify-between sm:justify-between lg:px-10 md:px-5 sm:px-4 dark-mode:text-gray-200 py-4 dark-mode:bg-gray-800 bg-white text-gray-700 sticky top-0 z-50 shadow-lg bg-opacity-95"
  >
    <input type="checkbox" id="check" class="hidden peer" checked />
    <label
      for="check"
      class="lg:hidden md:block sm:block text-4xl cursor-pointer"
    >
      <Icon client:only />
    </label>
    <a href="/">
      <Image src={logo2} alt="logo" height="20" width="120" />
    </a>
    <ul
      class="lg:flex lg:space-x-10 lg:items-center md:block sm:block lg:static md:fixed sm:fixed md:peer-checked:left-[-100%] sm:peer-checked:left-[-100%] md:left-0 sm:left-0 md:transition-all sm:transition-all md:duration-[900ms] sm:duration-[900ms] md:top-[70px] sm:top-[70px]
            lg:w-auto lg:h-auto md:w-full sm:w-full md:h-[100vh] sm:h-[100vh] text-black md:bg-[#fffffff2] sm:bg-[#fffffff2] lg:bg-transparent lg:space-y-0 md:space-y-5 sm:space-y-5 lg:py-0 md:py-10 sm:py-10 md:z-20 sm:z-20
            font-[Poppins]"
    >
      <li
        class="lg:border-none md:border-b-[1px] lg:py-0 md:py-4 sm:py-4 md:border-[#cdc6c6] sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <a
          class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-lg font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
          href="/About">ABOUT</a
        >
      </li>
      <li
        class="lg:border-none md:border-b-[1px] lg:py-0 md:py-4 sm:py-4 md:border-[#cdc6c6] sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button
            class="peer lg:px-5 md:px-0 lg:py-2 lg:text-black md:text-black"
          >
            <a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-lg font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              >VIDEO PRODUCTION</a
            ></button
          >
          <div
            class="absolute hidden peer-hover:flex hover:flex
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a
              class="px-5 py-3 hover:bg-gray-200"
              href="/Video_production#CORPORATE">COPERATIVE VIDEOS</a
            >
            <a
              class="px-5 py-3 hover:bg-gray-200"
              href="/Video_production#Legal">LEGAL VIDEOS</a
            >
          </div>
        </div>
      </li>
      <li
        class="lg:border-none md:border-b-[1px] md:border-[#cdc6c6] lg:py-0 md:py-4 sm:py-4 sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button
            class="peer lg:px-5 md:px-0 lg:py-2 lg:text-black md:text-black"
          >
            <a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-lg font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="/Media_training">MEDIA TRANING/COACHING</a
            >
          </button>
          <div
            class="absolute hidden peer-hover:flex hover:flex
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a class="px-5 py-3 hover:bg-gray-200" href="#">FOR LEADERS</a>
            <a class="px-5 py-3 hover:bg-gray-200" href="#">FOR JOURNALISTS</a>
          </div>
        </div>
      </li>
      <li
        class="lg:border-none md:border-b-[1px] md:border-[#cdc6c6] lg:py-0 md:py-4 sm:py-4 sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button
            class="peer lg:px-5 md:px-0 lg:py-2 lg:text-black md:text-black"
          >
            <a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-lg font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="/Strategic_consulting">STRATEGIC CONSULTING</a
            ></button
          >
          <div
            class="absolute hidden peer-hover:flex hover:flex
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a class="px-5 py-3 hover:bg-gray-200" href="#">EARNED MEDIA</a>
            <a class="px-5 py-3 hover:bg-gray-200" href="#"
              >CRISIS COMMUNICATIONS</a
            >
            <a class="px-5 py-3 hover:bg-gray-200" href="#"
              >NEWS INDUSTRY INSIGHT</a
            >
            <a class="px-5 py-3 hover:bg-gray-200" href="#">MULTI-MEDIA</a>
          </div>
        </div>
      </li>
      <li
        class="lg:border-none md:border-b-[1px] md:border-[#cdc6c6] lg:py-0 md:py-4 sm:py-4 sm:border-b-[1px] sm:border-[#cdc6c6]"
      >
        <div class="relative">
          <button
            class="peer lg:px-5 md:px-0 lg:py-2 lg:text-black md:text-black"
            ><a
              class="lg:px-4 md:px-4 sm:px-4 py-2 mt-2 text-lg font-semibold text-gray-900 rounded-lg hover:border-blue hover:text-blue dark-mode:bg-gray-700 dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
              href="/Contact">CONTACT</a
            ></button
          >
          <div
            class="absolute hidden peer-hover:flex hover:flex
                     w-[200px]
                     flex-col bg-white drop-shadow-lg text-black z-10"
          >
            <a class="px-5 py-3 hover:bg-gray-200" href="#"
              >BOOK FREE CONSULTATION</a
            >
            <a class="px-5 py-3 hover:bg-gray-200" href="#"
              >SPEAKING ENGAGEMENTS</a
            >
