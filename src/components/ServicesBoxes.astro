---
import { Image, HomeHeading, Heading } from "@utils/Components";
import { Boxes } from "@utils/Data";
---

<section class="lg:py-8 md:py-10 sm:pt-0 sm:pb-10">
  <div
    class="lg:container lg:mx-auto lg:pt-0 md:pt-0 md:pb-10 sm:pt-10 sm:pb-0 sm:space-y-4"
  >
    <div
      class="xl:text-[1vw] lg:text-[1vw] md:text-[1.8vw] sm:text-base xl:mx-[100px] lg:mx-[40px] md:mx-[50px] sm:mx-[25px] lg:text-left whitespace-normal lg:pb-0 md:pb-0 sm:pb-10"
    >
      <HomeHeading />
    </div>
  </div>
  <!-- <div class="border-t-[0.1px] border-red">1</div> -->
  <div
    class="flex justify-center items-center lg:text-3xl md:text-2xl sm:text-2xl font-bold lg:pb-0 sm:pb-0 border-t-[0.5px] border-lightgray"
  >
    <Heading Heading="Our Services" id="Our-services" style="pt-10" />
  </div>
  <!-- <div class="border-t-[0.1px] border-red">2</div> -->
  <div
    class="flex lg:flex-row sm:px-[24px] xl:justify-center xl:space-x-24 lg:justify-evenly md:flex-col md:justify-center md:items-center sm:items-center sm:flex-col md:space-y-12 lg:py-10 md:py-10 sm:pt-10 sm:space-y-16 lg:space-y-0"
  >
    {
      Boxes.map((box) => {
        return (
          <div class="md:block xl:max-w-[26rem] lg:max-w-[16rem] sm:max-w-[100%] md:max-w-sm rounded overflow-hidden shadow-xl cursor-pointer hover:text-blue hover:scale-[1.1] ease-in-out transition-all duration-[600ms]">
            <a href={box.link}>
              <Image
                src={box.ImageSource}
                alt="showcase"
                class:list={box.imagestyle}
              />
              <div class="flex justify-center lg:text-xl sm:text-sm font-semibold py-2">
                <h2 class="font-[Poppins] lg:text-lg sm:text-lg">{box.text}</h2>
              </div>
            </a>
          </div>
        );
      })
    }
  </div>
</section>
