---
import Movie from "../../components/Movie";
import { Image } from "astro:assets";
import VideoProduction from "../../assets/CorporateVideos3.jpg";
import MediaTraning from "../../assets/MediaTraning.jpg";
import Consulting from "../../assets/Consulting.jpg";

// import ContactImage from "../../assets/Contact.jpg";
// import Team from "./Team";
const imagestyle =
  "w-full object-cover lg:h-[250px] md:h-[200px] md:w-full sm:h-[200px] sm:w-full";
---

<Movie client:load />
<section class="lg:py-20 md:py-10 sm:pt-0 sm:pb-10">
  <div
    class="container mx-auto lg:px-20 lg:pt-10 lg:pb-20 lg:space-y-4 sm:py-20 sm:space-y-4"
  >
    <h2
      class="lg:text-center sm:text-left text-blue lg:text-4xl sm:text-3xl font-semibold sm:font-bold"
    >
      Media Advisory Experts
    </h2>
    <p class="text-xl lg:text-center sm:text-left">
      is an innovative media advisory company offering strategic communications
      , network television - level video production and targeted media and
      journalism training to corporate, government and individual clients across
      the United States and internationally
    </p>
  </div>
  <div
    class="flex justify-center items-center lg:text-3xl md:text-2xl sm:text-2xl font-bold sm:pb-10"
  >
    <h2 class="font-[Poppins] lg:text-4xl sm:text-3xl text-blue">
      Our Services
    </h2>
  </div>

  <div
    class="flex lg:flex-row sm:px-[24px] lg:justify-evenly md:flex-col md:justify-center md:items-center sm:items-center sm:flex-col md:space-y-12 lg:py-16 md:py-10 sm:py-8 sm:space-y-16 md:space-y-0 lg:space-y-0"
  >
    <div
      class="md:block sm:max-w-[100%] lg:max-w-sm md:max-w-sm rounded overflow-hidden shadow-xl cursor-pointer hover:text-blue hover:scale-[1.1] ease-in-out transition-all duration-[600ms]"
    >
      <a href="/Strategic_consulting">
        <Image src={Consulting} alt="showcase" class:list={imagestyle} />
        <div
          class="flex justify-center lg:text-xl sm:text-sm font-semibold py-2"
        >
          <h2 class="font-[Poppins] lg:text-2xl sm:text-lg">
            STRATEGIC CONSULTING
          </h2>
        </div>
      </a>
    </div>

    <div
      class="sm:max-w-full lg:max-w-sm md:max-w-sm rounded overflow-hidden shadow-xl cursor-pointer hover:text-blue hover:scale-[1.1] ease-in-out transition-all duration-[600ms]"
    >
      <Image src={MediaTraning} alt="showcase" class:list={imagestyle} />
      <div class="flex justify-center lg:text-xl sm:text-sm font-semibold py-2">
        <h2 class="font-[Poppins] lg:text-2xl sm:text-lg">MEDIA TRAINING</h2>
      </div>
    </div>
    <div
      class="sm:max-w-full lg:max-w-sm md:max-w-sm rounded overflow-hidden shadow-xl cursor-pointer hover:text-blue hover:scale-[1.1] ease-in-out transition-all duration-[600ms]"
    >
      <Image src={VideoProduction} alt="showcase" class:list={imagestyle} />
      <div class="flex justify-center lg:text-xl sm:text-sm font-semibold py-2">
        <h2 class="font-[Poppins] lg:text-2xl sm:text-lg">VIDEO PRODUCTION</h2>
      </div>
    </div>
  </div>
</section>

