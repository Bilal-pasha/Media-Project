---
import { VideoProduction, MediaTraining, Consulting } from "@utils/images";
import {
  Testinomials,
  Image,
  HTML,
  FormContact,
  FreeConsultation,
  HomeHeading,
  Movie,
} from "@utils/Components";

const imagestyle =
  " w-full object-cover lg:h-[180px] md:h-[200px] md:w-full sm:h-[200px] sm:w-full";
const ServicesBoxes = [
  {
    ImageSource: Consulting,
    imagestyle: { imagestyle },
    text: "STRATEGIC CONSULTING",
    link: "/Strategic_consulting",
  },
  {
    ImageSource: MediaTraining,
    imagestyle: { imagestyle },
    text: "MEDIA TRAINING",
    link: "/Media_training",
  },
  {
    ImageSource: VideoProduction,
    imagestyle: { imagestyle },
    text: "VIDEO PRODUCTION",
    link: "/Video_production",
  },
];
---

<HTML>
  <Movie />
  <section class="lg:pt-20 md:py-10 sm:pt-0 sm:pb-10">
    <div
      class="lg:container lg:mx-auto lg:pt-0 md:pt-0 md:pb-10 sm:py-20 sm:space-y-4"
    >
      <div
        class="lg:text-xl md:text-base lg:mx-[100px] md:mx-[40px] sm:mx-6 text-justify"
      >
        <HomeHeading />
      </div>
    </div>
    <div
      class="flex justify-center items-center lg:text-3xl md:text-2xl sm:text-2xl font-bold lg:pb-0 sm:pb-10"
    >
      <h2 class="font-[Poppins] lg:text-4xl sm:text-3xl">Our Services</h2>
    </div>

    <div
      class="flex lg:flex-row sm:px-[24px] lg:justify-evenly md:flex-col md:justify-center md:items-center sm:items-center sm:flex-col md:space-y-12 lg:py-20 md:py-10 sm:py-8 sm:space-y-16 lg:space-y-0"
    >
      {
        ServicesBoxes.map((box) => {
          return (
            <div class="md:block lg:max-w-sm sm:max-w-[100%] md:max-w-sm rounded overflow-hidden shadow-xl cursor-pointer hover:text-blue hover:scale-[1.1] ease-in-out transition-all duration-[600ms]">
              <a href={box.link}>
                <Image
                  src={box.ImageSource}
                  alt="showcase"
                  class:list={box.imagestyle}
                />
                <div class="flex justify-center lg:text-xl sm:text-sm font-semibold py-2">
                  <h2 class="font-[Poppins] lg:text-lg sm:text-lg">
                    {box.text}
                  </h2>
                </div>
              </a>
            </div>
          );
        })
      }
    </div>
  </section>

  <Testinomials />
  <div
    class="lg:mx-0 md:mx-10 sm:mx-3 lg:py-0 sm:py-0 sm:pb-20 flex flex-col items-center"
  >
    <div
      class="lg:w-full md:w-full sm:pt-0 sm:py-12 lg:py-0 lg:pb-0 sm:w-full md:py-0 space-y-9 lg:px-0 md:px-6 sm:px-0 lg:border-r-[1px] border-lightgray"
    >
      <FreeConsultation />
    </div>
    <div
      class="lg:container lg:mx-auto h-auto lg:w-[90%] md:w-full sm:w-full lg:py-6 md:py-10 sm:py-5 space-y-9 lg:px-6 md:px-4 sm:px-4"
    >
      <div class="lg:mx-[200px] md:mx-10 sm:mx-3">
        <FormContact client:visible />
      </div>
    </div>
  </div>
</HTML>
