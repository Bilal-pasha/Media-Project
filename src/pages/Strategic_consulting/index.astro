---
import { BackGroundImage, Image, HTML } from "@utils/Components";
import {
  Consultingpagebanner,
  MediaTraining,
  CrisisCommunications,
  Industry,
  MultiMedia,
  ConsultingHeading,
  EarnedMedia,
  CrisisCommunication,
  NewIndustryInsight,
  MultiMediaText,
} from "@utils/images";
---

<Fragment>
  <HTML title="Strategic Consulting - Media Advisory Experts">
    <BackGroundImage
      imageSource={Consultingpagebanner}
      heading1="STRATEGIC"
      text="CONSULTING"
    />
    <section>
      <div class="lg:container lg:mx-auto sm:px-5 mx-auto space-y-5">
        <div class="lg:py-12 md:pt-14 sm:py-10 lg:mx-[100px]">
          <div
            class="flex md:flex-col-reverse sm:flex-col-reverse sm:items-center lg:justify-evenly"
          >
            <div
              class="lg:text-xl sm:text-base lg:max-w-5/6 md:max-w-full text-center space-y-5"
            >
              <ConsultingHeading />
              <div id="Earned"></div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="border-y-[0.1px] border-lightgray">
      <div class="lg:container lg:mx-auto sm:px-5 mx-auto space-y-5">
        <div class="lg:py-12 sm:py-0 sm:space-y-0 lg:mx-[100px]">
          <h2
            class="lg:text-3xl md:text-3xl sm:text-2xl sm:py-10 md:py-10 font-semibold font-[Poppins] text-center lg:pb-8 lg:pt-0"
          >
            Earned Media
          </h2>
          <div class="grid lg:grid-cols-11 lg:space-y-0 sm:space-y-0">
            <div class="col-span-5">
              <Image src={MediaTraining} alt="image" class="rounded-lg" />
            </div>
            <div class="col-span-1"></div>
            <div
              class="lg:text-xl col-span-5 md:max-w-full sm:max-w-[100%] lg:text-left space-y-5 lg:py-0 sm:py-10"
            >
              <EarnedMedia />
              <div id="crisis"></div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="border-b-[0.1px] border-lightgray">
      <div class="lg:container lg:mx-auto sm:px-5 mx-auto space-y-5">
        <div
          class="lg:py-12 md:py-0 sm:pb-10 sm:pt-0 lg:space-y-5 sm:space-y-0 lg:mx-[100px]"
        >
          <h2
            class="lg:text-3xl md:text-3xl sm:text-2xl sm:py-10 md:py-10 font-semibold font-[Poppins] text-center lg:pb-8 lg:pt-0"
          >
            Crisis Communications
          </h2>
          <div class="grid lg:grid-cols-11 lg:space-y-0 sm:space-y-0">
            <div class="lg:text-xl col-span-5 md:max-w-full text-left pb-10">
              <CrisisCommunication />
              <div id="new-industry"></div>
            </div>
            <div class="col-span-1"></div>
            <div class="col-span-5">
              <Image
                src={CrisisCommunications}
                alt="image"
                class="rounded-lg"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="border-b-[0.1px] border-lightgray">
      <div class="lg:container lg:mx-auto sm:px-5 mx-auto space-y-0">
        <div class="lg:py-12 lg:space-y-5 sm:space-y-0 lg:mx-[100px]">
          <h2
            class="lg:text-3xl md:text-3xl sm:text-2xl sm:py-10 md:py-8 font-semibold font-[Poppins] text-center lg:pb-8 lg:pt-0"
          >
            News Industry Insight
          </h2>
          <div class="grid lg:grid-cols-11 lg:space-y-0 sm:space-y-0">
            <div class="col-span-5 lg:pb-0 sm:pb-10">
              <Image src={Industry} alt="image" class="rounded-lg" />
            </div>
            <div class="col-span-1"></div>
            <div class="lg:text-xl col-span-5 md:max-w-full text-left sm:pb-10">
              <NewIndustryInsight />
              <div id="multi-media"></div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="lg:container lg:mx-auto sm:px-5 mx-auto space-y-5">
      <section class="lg:py-12 lg:space-y-5 sm:space-y-0 lg:mx-[100px]">
        <h2
          class="lg:text-3xl md:text-3xl sm:text-2xl sm:py-10 md:py-8 font-semibold font-[Poppins] text-center lg:pb-8 lg:pt-0"
        >
          Multi-Media
        </h2>
        <div class="grid lg:grid-cols-11 lg:space-y-0 sm:space-y-0">
          <div class="lg:text-xl col-span-5 md:max-w-full text-left sm:pb-10">
            <MultiMediaText />
          </div>
          <div class="col-span-1"></div>

          <div class="col-span-5 sm:pb-10">
            <Image src={MultiMedia} alt="image" class="rounded-lg" />
          </div>
        </div>
      </section>
    </div>
  </HTML>
</Fragment>
